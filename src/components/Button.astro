---
interface Props {
  name: string;
  href: string;
}

const { name, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="w-full bg-[#0a0a0a] text-white py-2 my-2 text-center cursor-pointer rounded-md hover:bg-[#141414]"
  >{name}</a
>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&display=swap");

  a{
    font-family: "Fira Code", monospace;
  }
</style>
