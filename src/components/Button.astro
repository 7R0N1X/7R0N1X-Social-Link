---
interface Props {
  href: string;
  name: string;
}

const { name, href } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="flex justify-center items-center w-full border bg-[#0a0a0a00] text-white text-center py-3 my-3 px-4 cursor-pointer rounded-md transition ease-in-out hover:bg-[#141414]"
>
  <slot />
  <span class="flex-1">{name}</span>
</a>
